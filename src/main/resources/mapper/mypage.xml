<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitcamp.mapper.MypageMapper">

	<resultMap type="com.bitcamp.dto.MemberDTO" id="mdto">
		<result column="no" property="no" />
		<result column="name" property="name" />
		<result column="email" property="email" />
	<collection property="support" javaType="java.util.HashMap" resultSet="sdto" />
	</resultMap>

 	<resultMap type="hashMap" id="sdto">
		<result column="support_no" property="support_no" />
		<result column="support_date" property="support_date" />
		<result column="support_status" property="support_status" />
		<result column="no" property="no" />
		<result column="option_no" property="option_no" />
	</resultMap>

	<select id="mypageInfoList" resultMap="mdto">
		select name, email 
		from member
	</select>
	
	<select id="mypageSupportList" resultMap="sdto">
		select support_no, support_date, support_status, member.no, `option`.option_no
		from support join member on support.no = member.no
		join `option` on `option`.option_no = support.option_no
	</select>

</mapper>
